rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // articlesコレクションは、誰でも読み取りOK
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false; // ★超重要★ クライアントからの書き込みは一切禁止！
    }
    // 将来追加するかもしれない他のコレクションは、デフォルトで全て拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
